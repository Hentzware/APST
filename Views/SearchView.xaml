<UserControl
    x:Class="APST.Views.SearchView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewModels="clr-namespace:APST.ViewModels"
    d:Background="White"
    d:DataContext="{d:DesignInstance viewModels:SearchViewModel}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
            Margin="5"
            IsEnabled="{Binding IsConfigEnabled}"
            Orientation="Horizontal">
            <TextBlock Width="100" Text="PDF Folder Path" />
            <TextBox
                Width="300"
                Margin="0,0,5,0"
                IsReadOnly="True"
                Text="{Binding PdfFolderPath}" />
            <Button
                Width="100"
                Command="{Binding OpenFolderPathCommand}"
                Content="Open" />
        </StackPanel>
        <StackPanel
            Grid.Row="1"
            Margin="5"
            IsEnabled="{Binding IsConfigEnabled}"
            Orientation="Horizontal">
            <TextBlock Width="100" Text="Search Text" />
            <TextBox
                Width="300"
                Margin="0,0,5,0"
                Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="KeyDown">
                        <prism:InvokeCommandAction Command="{Binding KeyDownCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </TextBox>
            <Button
                Width="100"
                Command="{Binding SearchCommand}"
                Content="Search" />
        </StackPanel>
        <Grid
            Grid.Row="2"
            Margin="0,5,0,5"
            Visibility="{Binding SearchingVisibility}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="405" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <ProgressBar
                Grid.Column="0"
                Margin="5,0,0,0"
                IsIndeterminate="True" />
            <Button
                Grid.Column="1"
                Width="100"
                Margin="5,0,0,0"
                Command="{Binding CancelCommand}"
                Content="Cancel" />
        </Grid>
        <ListView
            Grid.Row="3"
            MinHeight="200"
            Margin="5"
            ItemsSource="{Binding SearchResults}"
            SelectedItem="{Binding SelectedSearchResult}">
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        Width="400"
                        DisplayMemberBinding="{Binding File}"
                        Header="File" />
                    <GridViewColumn
                        Width="100"
                        DisplayMemberBinding="{Binding Page}"
                        Header="Page" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
